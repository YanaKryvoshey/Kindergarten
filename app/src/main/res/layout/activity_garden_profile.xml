<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".Activitys.GardenProfileActivity">

    <TextView
        android:id="@+id/profile_TXT_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_horizontal"
        android:text="Garden Name "
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_weight="1"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/profile_TXT_phone"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Phone Number: "
        android:textSize="20dp"
        android:layout_weight="1"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/profile_TXT_numberOfTeachers"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Number Of Teachers: "
        android:textSize="20dp"
        android:layout_weight="1"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/profile_TXT_maxChildren"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Max Children: "
        android:textSize="20dp"
        android:layout_weight="1"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/profile_TXT_numOfChildren"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Number Of Children: "
        android:textSize="20dp"
        android:layout_weight="1"
        android:textColor="@color/black"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/teacherRecyclerView"
        android:layout_width="320dp"
        android:layout_weight="10"
        android:layout_height="280dp"
        android:orientation="horizontal"
        tools:listitem="@layout/teacher_list"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gardenPicRecyclerView"
        android:layout_width="320dp"
        android:layout_weight="10"
        android:layout_height="280dp"
        android:orientation="horizontal"
        tools:listitem="@layout/garden_pic_list"/>

</LinearLayout>


